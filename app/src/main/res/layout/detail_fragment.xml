<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.3"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/loading"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/prTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/loading"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/shopImage"
                    android:layout_width="500px"
                    android:layout_height="375px"
                    android:padding="10dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/loading"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/noimage" />

                <TextView
                    android:id="@+id/categoryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@id/shopImage"
                    android:padding="10dp"
                    android:text="@string/loading" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shopImage"
                    android:layout_alignRight="@id/phoneNumber"
                    android:padding="5dp"
                    android:text="@string/address"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shopImage"
                    android:layout_toRightOf="@id/phoneNumber"
                    android:padding="5dp"
                    android:text="@string/loading"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addressTextView"
                    android:padding="5dp"
                    android:text="@string/phone"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/phoneTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/phoneNumber"
                    android:layout_below="@id/addressTextView"
                    android:padding="5dp"
                    android:text="@string/loading"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/phoneImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/phone" />

                <TextView
                    android:id="@+id/website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_below="@id/phoneNumber"
                    android:layout_alignRight="@id/phoneNumber"
                    android:text="@string/URL"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/URLTextView"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_toRightOf="@id/website"
                    android:layout_below="@id/phoneTextView"
                    android:textSize="18sp" />

            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>