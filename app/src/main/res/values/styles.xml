<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultFont" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/ipaexg</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="DefaultFont.Title">
        <item name="android:textSize">24dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="DefaultFont.Name">
        <item name="android:textSize">21dp</item>
    </style>

    <style name="DefaultButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/frame</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="DefaultListItem" parent="android:Widget.AbsListView">
        <item name="android:background"></item>

    </style>

</resources>
